# =========================================================================
# [EN] Test trajectory visualization - verify trajectories are drawn
# [CN] 测试轨迹可视化 - 验证轨迹是否被绘制
# =========================================================================

# 1. Open visualization
/vis/open OGLIQt 1280x720

# 2. Load Geometry - B=1.0T
/control/execute /home/tian/workspace/dpol/smsimulator5.5/configs/simulation/DbeamTest/trajectory_viz/geometry_B100T.mac

# 3. Draw volume FIRST
/vis/drawVolume

# 4. Set view - Z-X plane (top view)
/vis/viewer/set/upVector 1 0 0
/vis/viewer/set/viewpointThetaPhi 90. 90.

# 5. Add coordinate axes
/vis/scene/add/axes 0 0 0 6000 mm

# ==========================================
# [CRITICAL] Trajectory settings - BEFORE beamOn
# ==========================================
# Add trajectories to scene
/vis/scene/add/trajectories smooth

# Create trajectory model by charge
/vis/modeling/trajectories/create/drawByCharge
/vis/modeling/trajectories/drawByCharge-0/default/setDrawStepPts true
/vis/modeling/trajectories/drawByCharge-0/default/setStepPtsSize 2

# Accumulate trajectories across events and runs
/vis/scene/endOfEventAction accumulate
/vis/scene/endOfRunAction accumulate

# Disable auto refresh during shooting
/vis/viewer/set/autoRefresh false
/vis/verbose warnings

# ==========================================
# 1. Deuteron: 380 MeV from (0, 0, -4m)
# ==========================================
/action/gun/Type Pencil
/action/gun/SetBeamParticleName deuteron
/action/gun/Position 0 0 -4000 mm
/action/gun/Energy 380 MeV
/action/gun/AngleX 0 deg
/action/gun/AngleY 0 deg
/run/beamOn 1

# ==========================================
# 2. Proton Py=+100 MeV/c from target (6deg config)
# ==========================================
/action/gun/SetBeamParticleName proton
/action/gun/Position -33.7681 0.0131 -762.6098 mm
/action/gun/Energy 195 MeV
/action/gun/AngleY 9.07 deg
/run/beamOn 1

# ==========================================
# 3. Proton Py=-100 MeV/c from target
# ==========================================
/action/gun/SetBeamParticleName proton
/action/gun/Position -33.7681 0.0131 -762.6098 mm
/action/gun/Energy 195 MeV
/action/gun/AngleY -9.07 deg
/run/beamOn 1

# ==========================================
# Final: Refresh and Export
# ==========================================
/vis/viewer/set/autoRefresh true
/vis/viewer/refresh
/vis/viewer/update

# Zoom out to see full trajectory
/vis/viewer/set/viewpointThetaPhi 90. 90.
/vis/viewer/zoomTo 0.3

# Export PNG (OpenGL)
/vis/ogl/export trajectory_test.png

# Export EPS (vector graphics)
/vis/ogl/printEPS

