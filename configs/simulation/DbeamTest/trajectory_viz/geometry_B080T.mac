# =========================================================================
# [EN] Geometry configuration for trajectory visualization
# [CN] 轨迹可视化几何配置
# Magnetic field: 0.80T
# =========================================================================
/control/getEnv SMSIMDIR
# Target - disabled for trajectory visualization
# /samurai/geometry/Target/SetTarget false
# /samurai/geometry/Target/Material Sn
# /samurai/geometry/Target/Size 80 80 30 mm
# /samurai/geometry/Target/Position 0 0 -400 cm
# /samurai/geometry/Target/Angle 0.00 deg

#-----------------------------------
# PDCs - Fixed position as specified
/samurai/geometry/PDC/Angle 65 deg
/samurai/geometry/PDC/Position1 0 0 400 cm
/samurai/geometry/PDC/Position2 0 0 500 cm

#-----------------------------------
# Dump
/samurai/geometry/Dump/SetDump false
/samurai/geometry/Dump/Angle 36.67 deg
/samurai/geometry/Dump/Position -0.93 -25.00 0.00 cm

#-----------------------------------
# NEBULA
/samurai/geometry/NEBULA/ParameterFileName {SMSIMDIR}/configs/simulation/geometry/NEBULA_Dayone.csv  
/samurai/geometry/NEBULA/DetectorParameterFileName {SMSIMDIR}/configs/simulation/geometry/NEBULA_Detectors_Dayone.csv

# Field map file - 0.8T
/samurai/geometry/Dipole/Angle 30 deg
/samurai/geometry/Dipole/FieldFile {SMSIMDIR}/configs/simulation/geometry/filed_map/141114-0,8T-3000.table
/samurai/geometry/Dipole/FieldFactor 1

#-----------------------------------
# UPDATE
/samurai/geometry/FillAir true
/samurai/geometry/Update
